<div class='flex flex-row w-full gap-20'>
    <div class='w-1/3'>
      <%= render 'forecast_form' %>
    </div>
    <div class='w-2/3 flex flex-col'>
      <div><%= @live_data ? 'LIVE DATA' : 'CACHED DATA' %></div>
      <div class='font-bold'><%= @address %></div>
      <div class='flex flex-row gap-5'>
        <% @forecast.each do |forecast| %>
          <div>
            <% image_url = image_path("#{forecast[:weatherCode]}.png") %>
            <div><%= forecast[:time] %></div>
            <div>High: <%= forecast[:temperatureMax] %></div>
            <div>Low: <%= forecast[:temperatureMin] %></div>
            <div><img src="<%= image_url %>" /></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>